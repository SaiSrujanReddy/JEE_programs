<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

<welcome-file-list>
 <welcome-file>Login.html</welcome-file>

</welcome-file-list>
<!-- For Demo Servlet -->
<servlet>
	<servlet-name>Sone</servlet-name>
	<servlet-class>com.reg.demo.DispDetails</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>Sone</servlet-name>
	<url-pattern>/one</url-pattern>
</servlet-mapping>

<!-- For Login Demo servlet Servlet -->
<servlet>
	<servlet-name>Login</servlet-name>
	<servlet-class>com.reg.demo.LoginSrv</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>Login</servlet-name>
	<url-pattern>/LoginSrv</url-pattern>
</servlet-mapping>

<!-- For Calculator  Servlet -->
<servlet>
	<servlet-name>cal</servlet-name>
	<servlet-class>com.reg.demo.Calculator</servlet-class>
	<load-on-startup>1</load-on-startup>
</servlet>

<servlet-mapping>
	<servlet-name>cal</servlet-name>
	<url-pattern>/Calculator</url-pattern>	
</servlet-mapping>


<!-- For Employee Registration Servlet -->
<servlet>
	<servlet-name>esrv</servlet-name>
	<servlet-class>com.reg.empdetails.EmpSrv</servlet-class>
	<load-on-startup>1</load-on-startup>
</servlet>

<servlet-mapping>
	<servlet-name>esrv</servlet-name>
	<url-pattern>/Register</url-pattern>	
</servlet-mapping>

</web-app>